<p id="notice"><%= notice %></p>

<h1>記帳簿</h1>
<div class="text-right"><%= link_to '新增', new_user_path, class:'btn btn-success' %></div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Money</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.content %></td>
        <td><%= user.money %></td>
        <!-- <td><%= link_to 'Show', user %></td> -->
        <td><%= link_to '編輯', edit_user_path(user) %></td>
        <td><%= link_to '刪除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
<%= paginate @users, :theme => 'twitter-bootstrap-3' %>
</div>


